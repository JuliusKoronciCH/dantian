{
  "name": "dantian",
  "description": "Event-based state management for React, powered by RxJS.",
  "keywords": [
    "react",
    "rxjs",
    "state-management",
    "event-store",
    "hooks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JuliusKoronciCH/dantian.git"
  },
  "bugs": {
    "url": "https://github.com/JuliusKoronciCH/dantian/issues"
  },
  "homepage": "https://github.com/JuliusKoronciCH/dantian#readme",
  "license": "MIT",
  "version": "0.0.2-beta.19",
  "type": "module",
  "main": "./dist/dantian.cjs",
  "module": "./dist/dantian.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dantian.js",
      "require": "./dist/dantian.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "./node_modules/.bin/vitest --run",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"http-server storybook-static --port 6006 --silent\" \"wait-on tcp:127.0.0.1:6006 && yarn test-storybook --ci\"",
    "e2e": "playwright test"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "peerDependencies": {
    "lodash": ">=4",
    "react": ">=18",
    "rxjs": ">=7.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "1.58.2",
    "@radix-ui/themes": "^2.0.3",
    "@storybook/addon-docs": "^10.2.7",
    "@storybook/addon-links": "^10.2.7",
    "@storybook/react": "^10.2.7",
    "@storybook/react-vite": "^10.2.7",
    "@storybook/test-runner": "^0.24.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/lodash.set": "^4",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "4.0.18",
    "ag-grid-community": "^35.0.1",
    "ag-grid-react": "^35.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^10.2.7",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "prettier": "^3.8.1",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "standard-version": "^9.5.0",
    "storybook": "^10.2.7",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18",
    "wait-on": "^9.0.3"
  },
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8"
}
